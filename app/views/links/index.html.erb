<%= render 'layouts/navigation' %>
<p class="alert-success"><%= notice %></p>
<p class="alert-danger"><%= alert %></p>


<div class="container">
    <div class="d-flex justify-content-between align-items-center mt-5">
      <h1 class="display-6">Links</h1>
      <%= link_to 'Create Link', new_link_path, class: 'btn btn-primary text-light' %>
    </div>

    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Link</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @links.each do |link| %>
            <tr>
              <td class="text-center"><%= link.original_url %></td>
              <td><%= link_to 'Show', link, class: 'btn btn-sm btn-success text-light' %></td>
              <td><%= link_to 'Edit', edit_link_path(link), class: 'btn btn-sm btn-secondary text-light' %></td>
              <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger text-light' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
</div>
